(library
 ((name grenier_doubledouble)
  (public_name grenier.doubledouble)
  (wrapped false)
  (modules (doubledouble))
  (synopsis
   "High precision floating point arithmetic (around 106 bits)")))

(executable
 ((name test_basic)
  (modules (test_basic))
  (libraries (grenier_doubledouble))))

(alias
 ((name runtest)
  (deps (./test_basic.exe))
  (action (run ${<}))))

